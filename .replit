modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["ffmpeg-full"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Audio Processor"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "streamlit_server"

[[workflows.workflow]]
name = "Streamlit Audio Processor"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "streamlit_server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add pydub && streamlit run app.py --server.port 5000"

[[ports]]
localPort = 5000
externalPort = 80
